<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="summoner" name="Summoner" page="True">
		    <t t-call="website.layout">
		      <div id="wrap">
		        <div class="oe_structure"/>
		        <div class="container">
		            <form action="/summoner/update" method="post" class="form-horizontal mt32" enctype="multipart/form-data">
        	            <div class="row">
        	            	<div class="col-xs-2">
        	            		<br/>
			                	<label class="control-label" for="summoner_name">Summoner Name :</label>
			                    <input type="text" class="form-control" name="summoner_name" placeholder="Threshy McGraby" t-attf-value="#{summoner_name or ''}"/>
			                </div>
        	            	<div class="col-xs-2">
        	            		<br/>
			                	<label class="control-label" for="summoner_region">Region :</label>
			                    <select class="form-control" name="summoner_region" t-attf-value="#{summoner_region or ''}">
									<option value="euw">EUW</option>
									<option value="eune">EUNE</option>
									<option value="na">NA</option>
									<option value="kr">KR</option>
								</select>
			                </div>
			                <div class="col-xs-2">
			                	<br/>
								<br/>			                	
			                	<button class="btn btn-primary btn-lg">Update</button>
		                	</div>
		                	<div class="col-xs-2" t-if="profileIconId">
			                    <div class="oe_structure">
			                    	<img class="img shadow img-rounded" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/profileicon/#{profileIconId}.png"/>
		                    	</div>
	                    	</div>
	                    	<div class="col-xs-5col-xs-offset-1" t-if="name">
	                    		<div class="oe_structure">
		                            <h3><span t-esc="name"/></h3>
			                        Level <span t-esc="summonerLevel"/> / Server <span t-esc="summoner_region"/><br/>
			                        Last Update: <span t-esc="revisionDate"/> / Id: <span t-esc="id"/><br/>
									Win: <span t-esc="win"/> / Loose: <span t-esc="loose"/> | Winrate (%): <span t-esc="win_rate"/>	                        
			                    </div>
			                </div>
			            </div>
                    </form>
		            <div class="row" t-if="matches">
		            	<div class="col-xs-5">
						<h1>Matches</h1>
							<table class="table table-condensed">
							  <thead>
							    <tr>
							    	<th><strong>Champion</strong></th>
							        <th><strong></strong></th>
							        <th><strong>KDA</strong></th>
							        <th><strong>Role</strong></th>
							        <th><strong>Result</strong></th>
							    </tr>
							  </thead>
							  <tbody>
							    <tr t-foreach="matches" t-as="match">
							        <td><img class="img img-responsive img-circle" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/champion/#{match.get('champion_icon_name')}.png" width="60"/></td>
							        <td><br/><span t-esc="match.get('champion_name')"/></td>
							        <td><br/><span t-esc="match.get('kills')"/> / <span t-esc="match.get('deaths')"/> / <span t-esc="match.get('assists')"/><br/><strong><span t-esc="match.get('kda')"/></strong></td>
							        <td><br/><span t-esc="match.get('official_role')"/></td>
							        <td>
							        	<img t-if="match.get('loose')" class="img img-responsive img-circle" src="/synergy_website_summoner/static/img/loose.jpg" width="60" height="60" alt="Loose"/>
							        	<img t-if="match.get('win')" class="img img-responsive img-circle" src="/synergy_website_summoner/static/img/win.jpg" width="60" height="60" alt="Win"/>
							    	</td>
							    </tr>
							  </tbody>
							</table>
						</div>
						<div class="col-xs-4 col-xs-offset-1">
							<h1>Best Champions</h1>
							<table class="table table-condensed">
							  <thead>
							    <tr>
							    	<th><strong>Logo</strong></th>
							        <th><strong>Name</strong></th>
							        <th><strong>Win</strong></th>
							        <th><strong>Loose</strong></th>
							        <th><strong>Win Rate</strong></th>
							    </tr>
							  </thead>
							  <tbody>
							    <!--<tr t-foreach="matches" t-as="match">
							        <td><img class="img img-responsive img-circle" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/champion/#{match.get('champion_icon_name')}.png" width="60"/></td>
							        <td><br/><span t-esc="match.get('champion_name')"/></td>
							        <td><br/><span t-esc="match.get('kills')"/> / <span t-esc="match.get('deaths')"/> / <span t-esc="match.get('assists')"/> - <span t-esc="match.get('kda')"/></td>
							        <td><br/><span t-esc="match.get('official_role')"/></td>
							        <td>
							        	<img t-if="match.get('loose')" class="img img-responsive img-circle" src="/synergy_website_summoner/static/img/loose.jpg" width="60" height="60" alt="Loose"/>
							        	<img t-if="match.get('win')" class="img img-responsive img-circle" src="/synergy_website_summoner/static/img/win.jpg" width="60" height="60" alt="Win"/>
							    	</td>
							    </tr>-->
							  </tbody>
							</table>
						</div>
						<div class="col-xs-4 col-xs-offset-1">
							<h1>Best Bros</h1>
							<table class="table table-condensed" t-if="bro_participants">
							  <thead>
							    <tr>
							    	<th><strong>Logo</strong></th>
							        <th><strong>Name</strong></th>
							        <th><strong>Played</strong></th>
							        <th><strong>Win</strong></th>
							        <th><strong>Loose</strong></th>
							        <th><strong>Win Rate</strong></th>
							    </tr>
							  </thead>
							  <tbody>
							    <tr t-foreach="bro_participants" t-as="bro">
							        <td><img class="img shadow img-rounded" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/profileicon/#{bro.get('profil_icon')}.png" width="60"/></td>
							        <td><br/><span t-esc="bro.get('name')"/></td>
							        <td><br/><span t-esc="bro.get('value')"/></td>
							        <td><br/><span t-esc="bro.get('official_role')"/></td>
							        <td><br/><span t-esc="bro.get('official_role')"/></td>
							        <td><br/><span t-esc="bro.get('official_role')"/></td>
							    </tr>
							  </tbody>
							</table>
						</div>
					</div>
		        </div>
		        <div class="oe_structure"/>
		      </div>
		    </t>
		</template>
	</data>
</openerp>
