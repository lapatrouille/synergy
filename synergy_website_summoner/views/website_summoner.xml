<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="summoner" name="Summoner" page="True">
		    <t t-call="website.layout">
		      <div id="wrap">
		        <div class="oe_structure"/>
		        <div class="container">
		            <form action="/summoner" method="post" class="form-horizontal mt32" enctype="multipart/form-data">
		            	<section data-snippet-id='three-columns'>
			                <div class="container">
			                    <div class="row">
			                        <div class="col-md-3">
			                        </div>
			                        <div class="col-md-4">
			                        	<div class="col-md-6">
						                	<label class="control-label" for="summoner_name">Summoner Name :</label>
						                    <input type="text" class="form-control" name="summoner_name" t-attf-value="#{summoner.summoner_name or ''}"/>
			                        	</div>
			                        	<div class="col-md-5">
						                	<label class="control-label" for="summoner_region">Region :</label>
						                    <select class="form-control" name="summoner_region" t-attf-value="#{summoner.region or ''}">
												<option value="euw">EUW</option>
												<option value="eune">EUNE</option>
												<option value="na">NA</option>
												<option value="kr">KR</option>
											</select>
										</div>
			                        </div>
			                        <div class="col-md-2">
										<br/>			                	
					                	<button class="btn btn-primary btn-lg">Update</button>
			                        </div>
			                    </div>
			                </div>
			            </section>
                    </form>
                    <section data-snippet-id='three-columns'>
		                <div class="container">
		                    <div class="row">
		                    	<div class="col-md-3" t-if="summoner">
		                    		<h1><span t-esc="summoner.summoner_name"/></h1>
			                    	<img class="img shadow img-rounded" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/profileicon/#{summoner.profile_icon_id}.png" t-if="summoner.profile_icon_id"/><br/>
			                        <br/><strong>Level</strong> <span t-esc="summoner.summoner_level"/> / <strong>Server</strong> <span t-esc="summoner.region"/><br/>
			                        <strong>Last Update:</strong> <span t-esc="summoner.revision_date"/><br/>
			                        <strong>Id:</strong> <span t-esc="summoner.summoner_id"/><br/>
		                        </div>
		                        <div class="col-md-6" t-if="matches">
		                            <h1>Matches</h1>
									<table class="table table-condensed">
									  <thead>
									    <tr>
									    	<th width="80"></th>
									        <th width="40"></th>
									        <th></th>
									        <th></th>
									        <th></th>
									        <th width="110"></th>
									        <!--<th class="text-center"><strong>Badge</strong></th>-->
									    </tr>
									  </thead>
									  <tbody>
									    <tr t-foreach="matches" t-as="match">
									        <td class="text-center" t-if="match.get('loose')"  style="background-color: rgba(255,0,0,0.3)">
												<img class="img img-circle img-center" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/champion/#{match.get('champion_key')}.png" width="60"/><br/>
									        </td>
									        <td class="text-center" t-if="match.get('win')" style="background-color: #A9F5A9">
												<img class="img img-circle img-center" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/champion/#{match.get('champion_key')}.png" width="60"/><br/>
									        </td>
									        <td t-if="match.get('loose')" class="text-center" style="background-color: rgba(255,0,0,0.3)">
								        		<img t-if="match.get('spell1id')" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/spell/#{match.get('spell1id')}.png" width="30"/><br/>
								        		<img t-if="match.get('spell2id')" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/spell/#{match.get('spell2id')}.png" width="30"/>
									        </td>
									        <td t-if="match.get('win')" class="text-center" style="background-color: #A9F5A9">
								        		<img t-if="match.get('spell1id')" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/spell/#{match.get('spell1id')}.png" width="30"/><br/>
								        		<img t-if="match.get('spell2id')" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/spell/#{match.get('spell2id')}.png" width="30"/>
									        </td>
									        <td class="text-center" t-if="match.get('loose')"  style="background-color: rgba(255,0,0,0.3)">
								        		<strong><span t-esc="match.get('official_role')"/><br/></strong>
								        		<br/>
								        		<span t-esc="match.get('champion_name')"/>
									        </td>
									        <td class="text-center" t-if="match.get('win')" style="background-color: #A9F5A9">
								        		<strong><span t-esc="match.get('official_role')"/><br/></strong>
								        		<br/>
								        		<span t-esc="match.get('champion_name')"/>
									        </td>
									        <td class="text-center" t-if="match.get('loose')"  style="background-color: rgba(255,0,0,0.3)">
									        	<strong><span t-esc="match.get('kills')"/>/<span style="color: #B40404" t-esc="match.get('deaths')"/>/<span style="color: #01DF3A" t-esc="match.get('assists')"/></strong><br/>
									        	<br/>
									        	<strong><span t-esc="match.get('kda')"/> KDA</strong>
								        	</td>
								        	<td class="text-center" t-if="match.get('win')" style="background-color: #A9F5A9">
									        	<strong><span t-esc="match.get('kills')"/>/<span style="color: #B40404" t-esc="match.get('deaths')"/>/<span style="color: #01DF3A" t-esc="match.get('assists')"/></strong><br/>
									        	<br/>
									        	<strong><span t-esc="match.get('kda')"/> KDA</strong>
								        	</td>
								        	<td class="text-center" t-if="match.get('loose')"  style="background-color: rgba(255,0,0,0.3)">
									        	Lvl <span t-esc="match.get('champlevel')"/><br/>
									        	<br/>
									        	<span t-esc="match.get('minionskilled')"/> CS
									    	</td>
									    	<td class="text-center" t-if="match.get('win')" style="background-color: #A9F5A9">
									        	Lvl <span t-esc="match.get('champlevel')"/><br/>
									        	<br/>
									        	<span t-esc="match.get('minionskilled')"/> CS
									    	</td>
								        	<td class="text-left" t-if="match.get('loose')"  style="background-color: rgba(255,0,0,0.3)">
								        		<img t-if="match.get('item0')" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/item/#{match.get('item0')}.png" width="30"/>
							        			<img t-if="match.get('item1')" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/item/#{match.get('item1')}.png" width="30"/>
								        		<img t-if="match.get('item2')" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/item/#{match.get('item2')}.png" width="30"/><br/>
								        		<img t-if="match.get('item3')" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/item/#{match.get('item3')}.png" width="30"/>
							        			<img t-if="match.get('item4')" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/item/#{match.get('item4')}.png" width="30"/>	
								        		<img t-if="match.get('item5')" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/item/#{match.get('item5')}.png" width="30"/>	
								        	</td>
								        	<td class="text-left" t-if="match.get('win')" style="background-color: #A9F5A9">
								        		<img t-if="match.get('item0')" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/item/#{match.get('item0')}.png" width="30"/>
							        			<img t-if="match.get('item1')" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/item/#{match.get('item1')}.png" width="30"/>
								        		<img t-if="match.get('item2')" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/item/#{match.get('item2')}.png" width="30"/><br/>
								        		<img t-if="match.get('item3')" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/item/#{match.get('item3')}.png" width="30"/>
							        			<img t-if="match.get('item4')" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/item/#{match.get('item4')}.png" width="30"/>	
								        		<img t-if="match.get('item5')" t-attf-src="http://ddragon.leagueoflegends.com/cdn/6.3.1/img/item/#{match.get('item5')}.png" width="30"/>	
								        	</td>
								        	<tr class="spacer"><td></td></tr>
									    </tr>
									  </tbody>
									</table>
		                        </div>
		                    </div>
		                </div>
		            </section>
		        </div>
		        <div class="oe_structure"/>
		      </div>
		    </t>
		</template>
		
		<template id="website.layout_footer_copyright" inherit_id="website.layout" name="Footer Copyright">
		    <xpath expr="//footer" position="inside">
		        <div class="container mt16 mb8">
		            <!--<div class="pull-right" t-ignore="true" t-if="not editable">
		                Create a <a href="http://www.odoo.com/page/website-builder">free website</a> with
		                <a class="label label-danger" href="http://www.odoo.com/page/website-builder">Odoo</a>
		            </div>-->
		            <div class="pull-left text-muted" itemscope="itemscope" itemtype="http://schema.org/Organization">
		                Copyright &amp;copy; <span t-field="res_company.name" itemprop="name">Company name</span>
		            </div>
		        </div>
		    </xpath>
		</template>
		
		<template id="homepage" inherit_id="website.homepage" name="Footer Copyright">
		    <xpath expr="//div" position="inside">
		    	<div class="oe_structure"/>
		        <div class="container">
		        	<form action="/summoner" method="post" class="form-horizontal mt32" enctype="multipart/form-data">
		            	<section data-snippet-id='three-columns'>
			                <div class="container">
			                    <div class="row">
			                        <div class="col-md-3">
			                        </div>
			                        <div class="col-md-4">
			                        	<div class="col-md-6">
						                	<label class="control-label" for="summoner_name">Summoner Name :</label>
						                    <input type="text" class="form-control" name="summoner_name" t-attf-value="#{summoner_name or ''}"/>
			                        	</div>
			                        	<div class="col-md-5">
						                	<label class="control-label" for="summoner_region">Region :</label>
						                    <select class="form-control" name="summoner_region" t-attf-value="#{summoner_region or ''}">
												<option value="euw">EUW</option>
												<option value="eune">EUNE</option>
												<option value="na">NA</option>
												<option value="kr">KR</option>
											</select>
										</div>
			                        </div>
			                        <div class="col-md-2">
										<br/>			                	
					                	<button class="btn btn-primary btn-lg">Update</button>
			                        </div>
			                    </div>
			                </div>
			            </section>
                    </form>
                </div>
		    </xpath>
		</template>
	</data>
</openerp>
